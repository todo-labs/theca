# Database
DATABASE_URL=replace_with_your_database_url

# JWT Secret for Authentication (REQUIRED - no default fallback) generate with: openssl rand -base64 32
JWT_SECRET=replace_with_your_jwt_secret

# TOTP Secret (generate with: bun run generate-totp-secret)
TOTP_SECRET=replace_with_your_totp_secret

# OpenRouter API Key for AI features
OPENROUTER_API_KEY=replace_with_your_openrouter_api_key

# Exa API Key for web search
EXA_API_KEY=

# Resend API Key for email notifications
RESEND_API_KEY=
# From address for emails (e.g., Theca <notifications@yourdomain.com>)
EMAIL_FROM=

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_AI_COVER_EXTRACTION=true
ENABLE_PUBLIC_VIEW=true

# Session Configuration
SESSION_TIMEOUT_HOURS=24
